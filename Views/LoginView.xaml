<Window x:Class="PSS_HVCement.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSS_HVCement.Views"
        xmlns:vm="clr-namespace:PSS_HVCement.ViewModels"
        d:DataContext="{d:DesignInstance vm:LoginViewModel}"
        mc:Ignorable="d"
        Width="650"
        Height="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_Loaded"
        Background="#272a31">
    <Window.Resources>
        <ResourceDictionary>
            <ControlTemplate x:Key="lblMainTemp"
                             TargetType="Label">
                <Grid>
                    <Border BorderBrush="#383b41"
                            BorderThickness="0.6"
                            CornerRadius="2"
                            Margin="0.6">
                        <Rectangle Fill="#272a31"
                                   Height="auto" />
                    </Border>
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      TextBlock.Foreground="White"
                                      TextBlock.FontFamily="Open Sans"
                                      TextBlock.FontWeight="SemiBold"
                                      TextBlock.FontSize="26"
                                      Margin="6 10 6 6"/>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2.2*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Template="{StaticResource lblMainTemp}">
            <Label.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/account.png"
                           Margin="8 8 2 8" />
                    <TextBlock Text="User"
                               TextAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="2 3 3 7"
                               Foreground="White"
                               FontSize="26"
                               FontWeight="SemiBold" />
                </StackPanel>
            </Label.Content>
        </Label>
        <Label Grid.Row="1"
               Grid.Column="0"
               Template="{StaticResource lblMainTemp}">
            <Label.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/lock.png"
                           Margin="6 6 2 6" />
                    <TextBlock Text="Password"
                               TextAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="2 3 3 14"
                               Foreground="White"
                               FontSize="26"
                               FontWeight="SemiBold" />
                </StackPanel>
            </Label.Content>
        </Label>
        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Margin="3"
                 x:Name="txtUser"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 Foreground="Black"
                 FontSize="26"
                 FontWeight="Bold" />
        <PasswordBox Grid.Column="1"
                     Grid.Row="1"
                     Margin="3"
                     Name="pwBox"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     KeyUp="pwBox_KeyUp" />
        <Grid  Grid.Column="1"
               Grid.Row="2">
            <Button x:Name="btnLogin"
                    Command="{Binding LoginCmd}"
                    CommandParameter="{Binding ElementName=btnLogin, Path=Name}"
                    Margin="3 3 125 3"
                    Width="180"
                    Foreground="White"
                    Background="#4d88ff">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="26"
                                   FontWeight="Bold"
                                   Text="Login" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button x:Name="btnClose"
                    Command="{Binding LoginCmd}"
                    CommandParameter="{Binding ElementName=btnClose, Path=Name}"
                    Margin="3"
                    Width="180"
                    Foreground="White"
                    HorizontalAlignment="Right"
                    Background="#ce3b3f">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="26"
                                   FontWeight="Bold"
                                   Text="Close" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
    </Grid>
</Window>
